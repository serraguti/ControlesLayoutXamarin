<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControlesLayout.TiposAlerta">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Tipos Alerta Xamarin"
                VerticalOptions="Start"
                   FontSize="40"
                HorizontalOptions="FillAndExpand" />
            <Button x:Name="botonsimple" Text="Alerta simple"
                    HorizontalOptions="FillAndExpand"/>
            <Button x:Name="botonokcancel" Text="Ok/Cancel"
                    HorizontalOptions="FillAndExpand"/>
            <Button x:Name="botonopciones" Text="Alerta opciones"
                    HorizontalOptions="FillAndExpand"/>
            <Button x:Name="botonmodal" Text="Alerta Modal"
                    HorizontalOptions="FillAndExpand"/>
            <Label FontSize="40" TextColor="Red" x:Name="lblrespuesta"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>